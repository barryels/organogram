{
  "name": "vite-template-solid",
  "version": "0.1.0",
  "description": "",
  "license": "MIT",
  "scripts": {
    "prepare": "husky install",
    "githook:pre-commit": "npm run format && npm run lint",
    "format": "prettier --ignore-path .gitignore --write ./",
    "lint": "npm run lint:js",
    "lint:js": "eslint --cache \"src/**/*.{js,jsx,ts,tsx,mjs}\"",
    "test:e2e": "npx cypress open --e2e --browser chrome",
    "test:e2e:headless": "cypress run",
    "test:e2e:headless:watch": "npx nodemon -e features,feature,js,json,jsx,ts,tsx,css --exec npm run test:e2e:headless",
    "start": "vite",
    "dev": "vite",
    "build": "vite build",
    "serve": "vite preview"
  },
  "cypress-cucumber-preprocessor": {
    "nonGlobalStepDefinitions": true
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "sourceType": "module",
      "ecmaVersion": 2020
    },
    "rules": {
      "curly": "error"
    },
    "extends": [
      "eslint:recommended",
      "plugin:solid/typescript",
      "plugin:cypress/recommended"
    ],
    "plugins": [
      "solid"
    ],
    "globals": {
      "process": true
    }
  },
  "dependencies": {
    "solid-js": "^1.6.10"
  },
  "devDependencies": {
    "@badeball/cypress-cucumber-preprocessor": "^15.1.4",
    "@bahmutov/cypress-esbuild-preprocessor": "^2.2.0",
    "@testing-library/cypress": "^9.0.0",
    "@typescript-eslint/parser": "^5.53.0",
    "cypress": "^12.6.0",
    "dotenv": "^16.0.3",
    "dotenv-expand": "^10.0.0",
    "eslint": "^8.34.0",
    "eslint-plugin-cypress": "^2.12.1",
    "eslint-plugin-solid": "^0.10.0",
    "husky": "^8.0.0",
    "lint-staged": "^13.1.2",
    "nodemon": "^2.0.20",
    "prettier": "^2.8.4",
    "typescript": "^4.9.5",
    "vite": "^4.1.1",
    "vite-plugin-solid": "^2.5.0"
  }
}
